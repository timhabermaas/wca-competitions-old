<div id="schedule">
  <% @competition.days.each_with_index do |day, index| %>
    <h3><%=l day, :format => :descriptive %></h3>
    <table class="day<%= index %>">
      <thead>
      </thead>
      <tbody>
        <% @schedules[index].each do |schedule| %>
          <tr>
            <td><%=l schedule.starts_at, :format => :time %></td>
            <td><%=l(schedule.ends_at, :format => :time) unless schedule.ends_at.nil? %></td>
            <td><%= schedule.event.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>