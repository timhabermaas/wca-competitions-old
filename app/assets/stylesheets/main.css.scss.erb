body {
  font-family: Georgia, Helvetica, Arial, sans-serif;
  font-size: 13px;
  color: #222;
  border-top: solid black 1.5em;
  background: #fff url("<%= image_path "background.png" %>") repeat-x;
}

h1, h2, h3 {
  margin-bottom: 20px;
  margin-top: 10px;
  font-weight: normal;
  color: #3E3E3E;
  border-bottom: dotted #e1e1e1 1px;
}

h1 {
  font-size: 320%;
}

h2 {
  font-size: 230%;
}

h3 {
  font-size: 150%;
}

#content {
  width: 768px;
  margin: 0 auto;
}