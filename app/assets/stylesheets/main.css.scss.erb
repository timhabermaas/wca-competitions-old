body {
  font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
  font-size: 13px;
  color: #222;
  border-top: solid black 1.5em;
  background: #fff url("<%= image_path "background.png" %>") repeat-x;
}

h1, h2, h3 {
  margin-bottom: 20px;
  margin-top: 15px;
  font-weight: normal;
  color: #3E3E3E;
  border-bottom: dotted #e1e1e1 1px;
}

h1 {
  font-size: 300%;
}

h2 {
  font-size: 220%;
}

h3 {
  font-size: 150%;
}

#content {
  width: 850px;
  margin: 0 auto;
  p {
    margin-bottom: 1em;
  }
}

article.textile, p.textile, div.textile {
  p {
    margin-bottom: 1em;
  }
  ul {
    margin-bottom: 1em;
    padding-left: 40px;
    list-style-type: disc;
  }
  em {
    font-style: italic;
  }
  strong {
    font-weight: bold;
  }
}