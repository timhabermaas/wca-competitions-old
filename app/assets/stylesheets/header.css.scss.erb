@import "mixins";

#localeselect {
  margin: 5px 5px;
  li {
    margin-right: 5px;
    float: left;
  }
  a {
    background-position: 18px 0px;
    @include replace-with-image(image-url("flags/en.png"), 18px, 12px);
  }
  a.active {
    background-position: 0px 0px;
  }
  <% I18n.available_locales.each do |locale| %>
  a.<%= locale %> {
    background-image: image-url("flags/<%= locale %>.png");
  }
  <% end %>
}

#header .wca {
  float: right;
  margin: 5px;
  @include replace-with-image(image-url("wca_small.png"), 50px, 50px);
}

#header:after {
  @include clear-both;
}